{
  "config": {
    "src": "assets",
    "dist": "public"
  },
  "name": "frontend-config",
  "version": "1.0.0",
  "description": "Ready to use frontend assets configration",
  "main": "index.js",
  "scripts": {
    "clear:js": "rm -rf -f $npm_package_config_dist/styles || true",
    "clear:css": "rm -rf -f $npm_package_config_dist/scripts || true",
    "clear:snowpack": "rm -rf -f $npm_package_config_dist/.compilation || true && rm -rf -f $npm_package_config_dist/web_modules || true",
    "watch:ts": "NODE_ENV=development snowpack build --watch",
    "watch:scss": "sass --watch assets/styles/views:$npm_package_config_dist/styles --source-map-urls=absolute --style=expanded --load-path=assets/styles/**/*,node_modules",
    "build:ts": "NODE_ENV=production snowpack build",
    "build:scss": "sass assets/styles/views:$npm_package_config_dist/styles --no-source-map --style=expanded --load-path=assets/styles/**/*,node_modules && npm run postcss",
    "postcss": "postcss $npm_package_config_dist/styles/*.css --replace --no-map",
    "lint:ts": "eslint ./assets --ext=.ts --fix",
    "lint:scss": "stylelint ./assets/styles/**/*.scss --fix",
    "clear": "concurrently \"npm run clear:js\" \"npm run clear:css\" \"npm run clear:snowpack\"",
    "watch": "npm run clear && concurrently \"npm run watch:ts\" \"npm run watch:scss\"",
    "build": "npm run clear && concurrently \"npm run build:ts\" \"npm run build:scss\"",
    "lint": "concurrently \"npm run lint:ts\" \"npm run lint:scss\"",
    "test": "NODE_ENV=test jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"assets/**/*.{ts,js,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pete-gi/frontend-config.git"
  },
  "author": "Piotr Golczyk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pete-gi/frontend-config/issues"
  },
  "homepage": "https://github.com/pete-gi/frontend-config#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@snowpack/plugin-babel": "^2.1.4",
    "@snowpack/plugin-optimize": "^0.2.10",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/plugin-webpack": "^2.1.3",
    "@types/jest": "^26.0.15",
    "@types/snowpack-env": "^2.3.2",
    "@types/validator": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^26.6.3",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-extract-media-query": "^2.0.0",
    "postcss-scss": "^3.0.4",
    "prettier": "^2.2.1",
    "sass": "^1.29.0",
    "snowpack": "^2.17.1",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "autoprefixer": "^10.0.4",
    "cssnano": "^4.1.10",
    "postcss-preset-env": "^6.7.0",
    "ress": "^3.0.0"
  }
}